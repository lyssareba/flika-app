rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only access their own data
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Early adopter counter â€” authenticated users can claim slots
    match /counters/earlyAdopters {
      allow read: if request.auth != null;
      allow create: if request.auth != null
        && request.resource.data.count is int
        && request.resource.data.count == 1;
      allow update: if request.auth != null
        && request.resource.data.count is int
        && request.resource.data.count == resource.data.count + 1
        && request.resource.data.count <= 100;
    }

    // Global attributes are read-only for authenticated users
    // Only Cloud Functions can write to this collection
    match /globalAttributes/{attributeId} {
      allow read: if request.auth != null;
      allow write: if false;
    }
  }
}
